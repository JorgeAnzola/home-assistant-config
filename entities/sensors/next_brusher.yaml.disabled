---
platform: template
sensors:
  tod:
    friendly_name: "Next Brusher"
    value_template: >
      {% if is_state('binary_sensor.morning', 'on') %}
        {{ 'morning' }}
      {%- elif is_state('binary_sensor.afternoon', 'on') %}
        {{ 'afternoon' }}
      {%- else %}
        {{ 'night' }}
      {%- endif -%}